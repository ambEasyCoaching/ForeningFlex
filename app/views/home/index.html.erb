      <p>
        "<%= t[:message] %>"
      </p>
      <small><cite title="<%= t[:person] %>"><%= t[:person] %></cite>, <%= t[:from] %></small>
    </blockquote>
    <% end %>
    
  </div>
  <div class="clearfix"></div>
</div>
